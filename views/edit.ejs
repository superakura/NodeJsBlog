<%- include header %>
    <form method="POST" role="form">
        <div class="form-group">
            <label for="">标题</label>
            <input type="text" disabled="disabled" class="form-control" value="<%= post.title %>" name="title" placeholder="标题">
        </div>
        <div class="form-group">
            <label>标签1</label>
            <input type="text" class="form-control" value="<%= post.tags[0]%>" disabled="disabled" name="tag1">
        </div>
        <div class="form-group">
            <label>标签2</label>
            <input type="text" class="form-control" value="<%= post.tags[1]%>" disabled="disabled" name="tag2">
        </div>
        <div class="form-group">
            <label>标签3</label>
            <input type="text" class="form-control" value="<%= post.tags[2]%>" disabled="disabled" name="tag3">
        </div>
        <div class="form-group">
            <label for="">正文</label>
            <textarea name="post" class="form-control" cols="100" rows="20"><%- post.post %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">保存修改</button>
    </form>
    <%- include footer%>