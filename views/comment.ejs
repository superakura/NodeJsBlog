<br>
<h3 class="text-info">评论</h3>
<% post.comments.forEach(function (comment,index) { %>
    <div class="row">
        <div class="col-md-12">
            <img src="<%= comment.head %>">
            <a href="<%= comment.website %>">
                <%= comment.name %>
            </a>
            <span>回复于：<%= comment.time %></span>
        </div>
        <div class="col-md-12">
            <%- comment.content %>
        </div>
    </div>
    <% }) %>
        <hr>
        <form method="POST" role="form">
            <% if(user) { %>
                <div class="form-group">
                    <label for="">姓名</label>
                    <input type="text" class="form-control" name="name" value="<%= user.name %>">
                </div>
                <div class="form-group">
                    <label for="">邮箱</label>
                    <input type="email" class="form-control" name="email" value="<%= user.email %>">
                </div>
                <div class="form-group">
                    <label for="">网址</label>
                    <input type="text" class="form-control" name="website" value="/u/<%= user.name %>">
                </div>
                <%  } else { %>
                    <div class="form-group">
                        <label for="">姓名</label>
                        <input type="text" class="form-control" name="name">
                    </div>
                    <div class="form-group">
                        <label for="">邮箱</label>
                        <input type="email" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                        <label for="">网址</label>
                        <input type="text" class="form-control" name="website" value="http://">
                    </div>
                    <% } %>
                        <div class="form-group">
                            <label for="">评论内容</label>
                            <textarea name="content" class="form-control" cols="80" rows="5"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">发表评论</button>
        </form>